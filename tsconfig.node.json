{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,

    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": false,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}
